<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" prefHeight="72.0" prefWidth="302.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="friend_image_view" fitHeight="84.0" fitWidth="94.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/logo_small.png" />
         </image>
      </ImageView>
      <Label fx:id="friend_name_label" text="Label" />
      <Button fx:id="adFriendBtn" mnemonicParsing="false" prefHeight="36.0" prefWidth="49.0" style="-fx-background-color: #eeeeee;" text="+" translateX="100.0">
         <font>
            <Font size="20.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Label fx:id="status_lbl" translateX="60.0" />
   </children>
</HBox>
